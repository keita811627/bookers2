<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">
     <h1>User info</h1>
     <table>
      <tbody>
       <tr>
        <th><%= attachment_image_tag @user, :profile_image, :fill, 80, 80, fallback: "no_image.jpg", size: '50x50' %></th>
       </tr>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
      </tbody>
     </table>
     <div class="row">
       <%= link_to "",edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_28140"%>
      </div>
     <h1>New book</h1>
     <%= form_with model:@new_book, local:true do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
     <%= f.submit "Create Book" %>
     <% end %>
   </div>
   <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>

     <table class="table">
      <tbody>
       <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40 %><%= link_to @user.name, user_path(@user.id) %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to "show", book_path(@book.id), class:"btn btn-sm btn-success edit_book_22583" %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_22583" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger destroy_book_22583" %></td>
        <% end %>
       </tr>
      </tbody>
     </table>

   </div>
 </div>
</div>